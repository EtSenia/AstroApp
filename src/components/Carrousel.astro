let images = [
  "/AstroApp/bg1.jpg",
  "/AstroApp/bg2.jpg",
  "/AstroApp/bg3.jpg",
  "/AstroApp/bg4.jpg",
  "/AstroApp/bg5.jpg",
];

let currentIndex = 0;

