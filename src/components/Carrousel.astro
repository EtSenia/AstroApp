---
let images = [
  "/AstroApp/bg1.jpg",
  "/AstroApp/bg2.jpg",
  "/AstroApp/bg3.jpg",
  "/AstroApp/bg4.jpg",
  "/AstroApp/bg5.jpg",
];
---

<div id="carousel" class="carousel relative w-full">
  {
    images.map((url, index) => (
      <img
        id={`next-img-${index}`}
        src={url}
        alt="next background"
        class="carousel-image absolute top-0 left-0 w-full h-full object-cover transition-opacity duration-500 ease-in-out z-0 opacity-0"
      />
    ))
  }
</div>

<script>
  let currentIndex = 0;
  const images = document.querySelectorAll(".carousel-image");

  function showImage(index: number) {
    images[currentIndex].classList.remove("active");
    currentIndex = index;
    images[currentIndex].classList.add("active");
  }

  function nextImage() {
    let nextIndex = (currentIndex + 1) % images.length;
    showImage(nextIndex);
  }

  function startCarousel() {
    nextImage();
    requestAnimationFrame(() => {
      setTimeout(startCarousel, 5000);
    });
  }

  showImage(currentIndex);
  startCarousel();
</script>

<style>
  .carousel {
    height: 55vh;
    max-height: 700px;
  }

  .carousel-image.active {
    z-index: 1;
    opacity: 1;
  }
</style>
